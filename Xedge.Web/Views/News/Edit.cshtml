@model NewsViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Edit News With Id : @Model.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input asp-for="Id" type="hidden" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title_AR" class="control-label"></label>
                <input asp-for="Title_AR" class="form-control" />
                <span asp-validation-for="Title_AR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" cols="10" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description_AR" class="control-label"></label>
                <textarea asp-for="Description_AR" cols="10" class="form-control"></textarea>
                <span asp-validation-for="Description_AR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Photos" class="control-label">Photos</label>
                <input name="Photos" type="file" class="form-control" />
                <span name="Photos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <h2>Edit News Images</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody id="tbl">
                    @foreach (var path in Model.Images)
                    {
                        <tr>
                            <td>
                                <img asp-append-version="true" src="@path" alt="@Model.Title" width="200" height="200" />
                            </td>
                            <td><a class="btn btn-danger" asp-action="DeleteImage" asp-controller="News" asp-route-path="@path" asp-route-newsid="@Model.Id"> Delete Image</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

